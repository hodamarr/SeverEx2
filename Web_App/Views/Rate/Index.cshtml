@model List<Rate> 
    <h2>Write Somthing About Us... :3 </h2>
    <form  method ="post" asp-action="AddReview">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="name">
            <div id="name" class="form-text"></div>
        </div>
        <div class="mb-3">
            <label class="form-label">Review</label>
            <input type="text" class="form-control" id="review" name="content">
        </div>
        <br />
        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group me-2" role="group" aria-label="First group">
                <button type="button" class="btn btn-primary" name="score" value="1">1</button>
                <button type="button" class="btn btn-primary" name="score" value="2">2</button>
                <button type="button" class="btn btn-primary" name="score">3</button>
                <button type="button" class="btn btn-primary" name="score">4</button>
                <button type="button" class="btn btn-primary" name="score">5</button>
            </div>
         </div>
            <div id="submit">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>   
</form>
<h2>Rating & Reviews        </h2>

<div id="reviews">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Score</th>
                <th scope="col">Review</th>
                <th scope="col"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Rate r in Model)
            {
            <tr>
                <th scope="row">@r.ID</th>
                <td>@r.Name</td>
                <td>@r.Score</td>
                <td>@r.Content</td>
                <td><a asp-action="Edit" asp-route-id="@r.ID">Edit</a> <a asp-action="Watch" asp-route-id="@r.ID">Watch</a></td>
            </tr>
            }

        </tbody>
    </table>
</div>